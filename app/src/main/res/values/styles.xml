<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme2" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/backgroundWhite2</item>
        <item name="colorPrimaryDark">@color/backgroundWhite2</item>
        <item name="colorAccent">@color/basicOrange</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppThemeDetail" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/backgroundWhite2</item>
        <item name="colorPrimaryDark">@color/backgroundWhite2</item>
        <item name="colorAccent">@color/basicOrange</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

</resources>